<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    android:background="@color/white"
    tools:context=".signin.SignInActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="60"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"/>

        <ImageView
            android:tint="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/refri"
            android:id="@+id/imageView3" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="나의 똑똑한 냉장고"
            ></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:text="냉장고를 부탁해요우"
            android:textStyle="bold"
            android:textColor="@color/black"></TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ai" />

            <LinearLayout
                android:layout_width="2dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:src="@drawable/circle"
                android:tint="@color/black" />

            <LinearLayout
                android:layout_width="2dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/care" />

            <LinearLayout
                android:layout_width="2dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:src="@drawable/circle"
                android:tint="@color/black" />

            <LinearLayout
                android:layout_width="2dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/gro" />

            <ImageView
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:src="@drawable/circle"
                android:tint="@color/black" />

            <LinearLayout
                android:layout_width="2dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/family" />

            <LinearLayout
                android:layout_width="2dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:src="@drawable/circle"
                android:tint="@color/black" />

            <LinearLayout
                android:layout_width="2dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/main1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

        <TextView
            android:textColor="@color/black"
            android:gravity="center"
            android:text="로그인"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:weightSum="100"
        android:layout_weight="40"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_weight="10"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="80"
            android:layout_width="0dp"
            android:layout_height="match_parent">

<!--            아이디-->
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:tint="@color/black"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/email"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>

                <EditText
                    android:inputType="textEmailAddress"
                    android:id="@+id/signin_email_et"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"/>

            <!--비밀번호-->
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView

                    android:tint="@color/black"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/password2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
                <EditText
                    android:inputType="textPassword"
                    android:id="@+id/signin_password_et"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:weightSum="100"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:gravity="center"
                    android:layout_weight="30"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <Button
                        android:backgroundTint="@color/black"
                        android:id="@+id/signin_btn"
                        android:text="로그인"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/black"
                        android:text="자동 로그인"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></TextView>

                    <CheckBox
                        android:id="@+id/signin_auto_checkbox"
                        android:layout_width="32dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/black"></CheckBox>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_weight="40"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <TextView
                        android:textStyle="italic"
                        android:textColor="@color/black"
                        android:text="혹시 회원이 아니신가요? / "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></TextView>
                    <TextView
                        android:id="@+id/signin_to_signup_btn"
                        android:textSize="18dp"
                        android:textColor="@color/black"
                        android:text="회원가입하기"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></TextView>

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>


        <LinearLayout

            android:layout_weight="10"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>





    </LinearLayout>


</LinearLayout>